
module physics_mappings_alg_mod

    use imaginary_mod_one, only : kernel_one, kernel_two, kernel_three
    use imaginary_mod_two, only : kernel_four, &
                                  kernel_five, &
                                  kernel_six

    implicit none

    private

    public :: my_subroutine_one

contains

    subroutine my_subroutine_one(a, b)

        implicit none

        integer :: a
        integer :: b

        ! one line
        call invoke( name = "name a", kernel_type_one( a, b ), kernel_type_two( a, b ), kernel_type_three( a, b ) )
        ! no spaces
        call invoke(name="name b",kernel_type_one(a,b),kernel_type_two(a,b),kernel_type_three(a,b))

        ! arg lines
        call invoke( name = "name c", &
                     kernel_type_one( a, b ), &
                     kernel_type_two( a, b ), &
                     kernel_type_one( a, b ) )
        call invoke(name="name d",&
                    kernel_type_one(a,b),&
                    kernel_type_two(a,b),&
                    kernel_type_three(a,b))

        ! arg arg lines
        call invoke( &
                     name = "name e", &
                     kernel_type_one( a, &
                                      b ), &
                     kernel_type_two( a, &
                                      b ), &
                     kernel_type_three( a, &
                                        b ) )
        call invoke(&
                    name="name f",&
                    kernel_type_one(a,&
                                    b),&
                    kernel_type_two(a,&
                                    b),&
                    kernel_type_three(a,&
                                    b))

    end subroutine my_subroutine_one

    subroutine my_subroutine_two(a, b)

        implicit none

        integer :: a
        integer :: b

        ! no names
        call invoke(kernel_type_one( a, b ), kernel_type_two( a, b ), kernel_type_three( a, b ) )
        call invoke(kernel_type_one(a,b),kernel_type_two(a,b),kernel_type_three(a,b))

        call invoke( kernel_type_one( a, b ), &
                     kernel_type_two( a, b ), &
                     kernel_type_one( a, b ) )
        call invoke(kernel_type_one(a,b),&
                    kernel_type_two(a,b),&
                    kernel_type_three(a,b))

        call invoke( &
                     kernel_type_one( a, &
                                      b ), &
                     kernel_type_two( a, &
                                      b ), &
                     kernel_type_three( a, &
                                        b ) )
        call invoke(&
                    kernel_type_one(a,&
                                    b),&
                    kernel_type_two(a,&
                                    b),&
                    kernel_type_three(a,&
                                    b))

    end subroutine my_subroutine_two

end module physics_mappings_alg_mod
